{
    "hosting": {
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.apk",
                "headers": [
                    {
                        "key": "Content-Type",
                        "value": "application/vnd.android.package-archive"
                    },
                    {
                        "key": "Cache-Control",
                        "value": "max-age=300"
                    }
                ]
            }
        ]
    }
}