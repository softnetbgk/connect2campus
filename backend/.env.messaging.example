# ============================================
# MESSAGING CONFIGURATION
# ============================================

# Choose your messaging strategy:
# Option 1: SMS Only (Recommended - Cheapest ₹0.10/msg)
# Option 2: WhatsApp Only (Expensive ₹0.50-1.50/msg)
# Option 3: Both SMS + WhatsApp (Maximum reliability but costly)

# Enable/Disable SMS (Default: enabled)
ENABLE_SMS=true

# Enable/Disable WhatsApp (Default: disabled due to cost)
ENABLE_WHATSAPP=false

# ============================================
# SMS PROVIDER CONFIGURATION (Choose ONE)
# ============================================

# SMS Provider: MSG91, FAST2SMS, or TEXTLOCAL
SMS_PROVIDER=FAST2SMS

# --- Fast2SMS (Cheapest: ₹0.10/SMS) ---
# Sign up: https://www.fast2sms.com/
FAST2SMS_API_KEY=your_fast2sms_api_key_here

# --- MSG91 (Reliable: ₹0.15/SMS) ---
# Sign up: https://msg91.com/
# MSG91_AUTH_KEY=your_msg91_auth_key_here
# MSG91_SENDER_ID=SCHOOL
# MSG91_ROUTE=4

# --- TextLocal (Enterprise: ₹0.20/SMS) ---
# Sign up: https://www.textlocal.in/
# TEXTLOCAL_API_KEY=your_textlocal_api_key_here
# TEXTLOCAL_SENDER=SCHOOL

# ============================================
# WHATSAPP CONFIGURATION (Optional)
# ============================================

# --- Twilio WhatsApp (Quick Setup) ---
# Sign up: https://www.twilio.com/
# TWILIO_ACCOUNT_SID=your_account_sid_here
# TWILIO_AUTH_TOKEN=your_auth_token_here
# TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# --- WhatsApp Business API (Free Tier) ---
# Sign up: https://business.facebook.com/
# WHATSAPP_BUSINESS_ACCOUNT_ID=your_account_id
# WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
# WHATSAPP_ACCESS_TOKEN=your_access_token

# ============================================
# COST ESTIMATION
# ============================================
# For 500 students, 20 school days/month:
# - Fast2SMS: ₹1,000/month
# - MSG91: ₹1,500/month
# - Twilio WhatsApp: ₹8,000/month
# - WhatsApp Business API: FREE (first 1000), then ₹3,000/month
